@{
    Layout = null; // We don't want to nest layouts
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard - @ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Optional: Bootstrap Icons (for icons in the sidebar) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Site-wide admin CSS (optional) -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-speedometer2 me-2"></i>Group8_iFINANCE_APP
            </a>
            <!-- Right side of navbar if needed -->
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse min-vh-100" id="sidebarMenu">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <!-- Dashboard Link -->
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page"
                               asp-controller="AdminDashboard" asp-action="Index">
                                <i class="bi bi-grid me-2"></i>Dashboard
                            </a>
                        </li>
                        <!-- Add User Link (the one you requested) -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="AdminDashboard" asp-action="AddUser">
                                <i class="bi bi-person-plus me-2"></i>Add User
                            </a>
                        </li>
                        <!-- Add more items as needed -->
                    </ul>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Additional site-wide JS if needed -->
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>