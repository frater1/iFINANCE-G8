@model IEnumerable<Group8_iFINANCE_APP.Models.MasterAccount>
@{
    ViewData["Title"] = "Chart of Accounts";
}

<div class="mb-3 d-flex justify-content-between align-items-center">
  <div>
    <a asp-controller="UserHome" asp-action="Index" class="btn btn-secondary">
      ‚Üê Back to Dashboard
    </a>
  </div>
  <div>
    <a asp-action="Create" class="btn btn-primary">
      + Add New Account
    </a>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Opening</th>
      <th>Closing</th>
      <th>Group</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach (var acct in Model) {
    <tr>
      <td>@acct.Name</td>
      <td>@String.Format("${0:N2}", acct.OpeningAmount)</td>
      <td>@String.Format("${0:N2}", acct.ClosingAmount)</td>
      <td>@acct.Group?.Name</td>
      <td>
        <a asp-action="Delete" asp-route-id="@acct.ID" class="btn btn-sm btn-danger">
          Delete
        </a>
      </td>
    </tr>
  }
  </tbody>
</table>