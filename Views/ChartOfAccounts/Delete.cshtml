@model Group8_iFINANCE_APP.Models.MasterAccount
@using System.Globalization

@{
    ViewData["Title"] = "Delete Account";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Index">‚Üê Back to Accounts</a>
</p>

<h4 class="mt-4">Are you sure you want to delete this account?</h4>
<hr />

<dl class="row">
  <dt class="col-sm-2">Name</dt>
  <dd class="col-sm-10">@Model.Name</dd>

  <dt class="col-sm-2">Opening Balance</dt>
  <dd class="col-sm-10">
    @if (Model.OpeningAmount.HasValue)
    {
        @Model.OpeningAmount.Value.ToString("C", CultureInfo.CurrentCulture)
    }
    else
    {
        <em>n/a</em>
    }
  </dd>

  <dt class="col-sm-2">Current Balance</dt>
  <dd class="col-sm-10">
    @if (Model.ClosingAmount.HasValue)
    {
        @Model.ClosingAmount.Value.ToString("C", CultureInfo.CurrentCulture)
    }
    else
    {
        <em>n/a</em>
    }
  </dd>

  <dt class="col-sm-2">Group</dt>
  <dd class="col-sm-10">@Model.Group?.Name</dd>
</dl>

<form asp-action="Delete" method="post">
  <input asp-for="ID" type="hidden" />
  <button type="submit" class="btn btn-danger">Yes, delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}