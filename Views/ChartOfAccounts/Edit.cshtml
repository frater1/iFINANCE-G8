@model Group8_iFINANCE_APP.Models.MasterAccount
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Account";
}
<a asp-action="Index" class="btn btn-secondary mb-3">‚Üê Back to Accounts</a>
<h2>Edit Account</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OpeningAmount" class="form-label"></label>
        <input asp-for="OpeningAmount" class="form-control"/>
        <span asp-validation-for="OpeningAmount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ClosingAmount" class="form-label"></label>
        <input asp-for="ClosingAmount" class="form-control"/>
        <span asp-validation-for="ClosingAmount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Group_ID" class="form-label">Group</label>
        <select asp-for="Group_ID" asp-items="ViewBag.Groups" class="form-select"></select>
        <span asp-validation-for="Group_ID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}