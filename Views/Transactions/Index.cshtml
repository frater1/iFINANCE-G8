@model IEnumerable<Group8_iFINANCE_APP.Models.TransactionIndexViewModel>
@using System.Globalization

@{
  ViewData["Title"] = "Transactions";
}

<h2>@ViewData["Title"]</h2>
<p>
  <a asp-action="Create" class="btn btn-success">+ Add Transaction</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th class="text-end">Amount</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var t in Model) {
    <tr>
      <td>@t.Date.ToString("d")</td>
      <td>@t.Description</td>
      <td class="text-end">
        @t.Amount.ToString("C2", CultureInfo.CurrentCulture)
      </td>
    </tr>
  }
  </tbody>
</table>