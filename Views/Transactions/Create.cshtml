@model Group8_iFINANCE_APP.Models.TransactionCreateViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
  ViewData["Title"] = "Add Transaction";
}

<h2>@ViewData["Title"]</h2>
<p><a asp-action="Index">‚Üê Back to Transactions</a></p>

<form asp-action="Create" method="post">
  <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

  <div class="row mb-3">
    <div class="col">
      <label asp-for="Date"></label>
      <input asp-for="Date" class="form-control" />
    </div>
    <div class="col">
      <label asp-for="Description"></label>
      <input asp-for="Description" class="form-control" />
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <label asp-for="DebitAccountId"></label>
      <select asp-for="DebitAccountId" asp-items="ViewBag.Accounts" class="form-control">
        <option value="">-- select account --</option>
      </select>
      <span asp-validation-for="DebitAccountId" class="text-danger"></span>
    </div>
    <div class="col">
      <label asp-for="CreditAccountId"></label>
      <select asp-for="CreditAccountId" asp-items="ViewBag.Accounts" class="form-control">
        <option value="">-- select account --</option>
      </select>
      <span asp-validation-for="CreditAccountId" class="text-danger"></span>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <label asp-for="Amount"></label>
      <input asp-for="Amount" class="form-control" />
      <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="col">
      <label asp-for="Comments"></label>
      <input asp-for="Comments" class="form-control" />
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Save Transaction</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}