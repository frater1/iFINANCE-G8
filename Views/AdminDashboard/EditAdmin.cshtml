@model Group8_iFINANCE_APP.Models.Administrator
@{
    ViewData["Title"] = "Edit Admin";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="EditAdmin" method="post">
    @Html.AntiForgeryToken()

    @* IMPORTANT: hidden ID field so your POST action sees the right ID *@
    <input asp-for="ID" type="hidden" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateHired"></label>
        <input asp-for="DateHired" type="date" class="form-control" />
        <span asp-validation-for="DateHired" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateFinished"></label>
        <input asp-for="DateFinished" type="date" class="form-control" />
        <span asp-validation-for="DateFinished" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="ListAdmins" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}