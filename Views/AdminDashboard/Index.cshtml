@{
    ViewData["Title"] = "Admin Dashboard";
    var username = Context.Session.GetString("Username") ?? "Administrator";
    var totalAdmins    = ViewBag.TotalAdmins ?? 0;
    var totalNonAdmins = ViewBag.TotalNonAdmins ?? 0;
}

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
/>

<div class="container py-5">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent px-0">
      <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
  </nav>

  <div class="mb-4 text-center">
    <h1>Welcome back, @username üëã</h1>
    <p class="text-muted">Use the cards below to manage your system.</p>
  </div>

  <!-- Totals Row -->
  <div class="row g-4 mb-5">
    <div class="col-md-6">
      <div class="card text-white bg-primary">
        <div class="card-body d-flex align-items-center">
          <i class="bi bi-shield-lock-fill me-3 fs-1"></i>
          <div>
            <h5 class="card-title">Total Administrators</h5>
            <h2 class="card-text">@totalAdmins</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card text-white bg-success">
        <div class="card-body d-flex align-items-center">
          <i class="bi bi-people-fill me-3 fs-1"></i>
          <div>
            <h5 class="card-title">Total Users</h5>
            <h2 class="card-text">@totalNonAdmins</h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Cards -->
  <div class="row g-4">
    <div class="col-sm-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="bi bi-person-plus-fill fs-1 mb-3"></i>
          <h5 class="card-title">Add New User</h5>
          <p class="card-text text-muted">Create a brand‚Äênew Admin or Non-Admin account.</p>
          <a asp-action="AddUser" class="btn btn-primary">Go to Add User</a>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="bi bi-person-badge-fill fs-1 mb-3"></i>
          <h5 class="card-title">List Administrators</h5>
          <p class="card-text text-muted">View, edit or delete existing admins.</p>
          <a asp-action="ListAdmins" class="btn btn-primary">View Admins</a>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="bi bi-people-fill fs-1 mb-3"></i>
          <h5 class="card-title">List Users</h5>
          <p class="card-text text-muted">View, edit or delete non-admin users.</p>
          <a asp-action="ListNonAdmins" class="btn btn-primary">View Users</a>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="bi bi-gear-fill fs-1 mb-3"></i>
          <h5 class="card-title">Settings</h5>
          <p class="card-text text-muted">Change your password or preferences.</p>
          <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-secondary">
            Change Password
          </a>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="bi bi-box-arrow-right fs-1 mb-3"></i>
          <h5 class="card-title">Logout</h5>
          <p class="card-text text-muted">End your current session safely.</p>
          <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
            Logout
          </a>
        </div>
      </div>
    </div>
  </div>
</div>